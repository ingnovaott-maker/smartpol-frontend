{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    // Otras opciones...
    // Desactivar la comprobación de tipos estrictos
    // "strict": false,
    // O desactivar solo la comprobación de tipos implícitos (sin declaraciones)
    // "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
        "@/*": [
            "./src/*"
        ]
    },
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    /* Linting */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", ".eslintrc.cjs"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
